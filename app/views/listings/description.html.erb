<%= render 'partial/navbar' %>
<dev class="container">
  <div class="col-md-3">
    <%= render 'partial/verticalnavbar' %>
  </div>

  <div class="col-md-9">
    <div class="panel-default">
      <div class="panel-heading">
        <div class="text-center">
          <span style= "font-size:24px;">リスティング内容の編集</span>
        </div>
      </div>

      <div class="panel-body">

        <%= form_for @listing do |f| %>

          <div class="row">
            <div class="col-md-12 select">
              <div class="form-group">
                <label>タイトル</label>
                <%= f.text_field :listing_title, :class => "form-control",placeholder: "リスティングタイトルを記載しましょう" %>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-12 select">
              <div class="form-group">
                <label>内容</label>
                <%= f.text_area :listing_content,:class =>"form-control", rows:8, placeholder: "リスティング内容について記載してください"%>
              </div>
            </div>
          </div>
          <br>
          <div class="actions">
            <%= f.submit "更新",:class =>"btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</dev>
